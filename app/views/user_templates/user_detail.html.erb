<h1><%=@user.username%> </h1>

<dl>
  <dt>ID</dt>
  <dd><%=@user.id%></dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%=@user.id%>" method="post">
      <label for="new_username">Username</label>
      <input id="new_username" type="text" name="input_username" value="<%=@user.username%>">
      <button>Update user</button>
    </form>
  </dd>
</dl>

<h1> Own photos (<%=@user.own_photos.count%>) </h1>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @user.own_photos.each do |p| %>
  <tr>
    <td> <img src=<%=p.image%>> </td>
    <td> <%=@user.username%> </td>
    <td> <%=p.caption%> </td>
    <td> <%=p.created_at%> </td>
    <td><a> Show details </a></td>
  </tr>
  <% end %>
</table>
